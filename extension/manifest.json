{
  "manifest_version": 3,
  "name": "ChatGPT & Gemini Markdown Copy",
  "version": "2.0.0",
  "description": "Add Markdown copy button to ChatGPT and Gemini responses",
  "author": "bugparty",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://*.ingest.sentry.io/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.ingest.sentry.io"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["sentry.min.js", "sentry-config.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "markdown-copy@bugparty.dev",
      "strict_min_version": "109.0"
    }
  }
}
